<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class = "container-fluid">
      <div class = "navbar-header">
        <a class="navbar-brand" href="/"> Social Stats</a>
      </div>
      <ul class = "nav navbar-nav">
        <li><a href="/landing" routerLinkActive="active">User</a></li>
        <li><a href="/profile" routerLinkActive="active">Profile</a></li>
        <li><a href="/notes" routerLinkActive="active">Notes</a></li>
        <li><a href="/religions" routerLinkActive="active">Religions</a></li>
        <li><a href="/conflict" routerLinkActive="active">Conflict</a></li>
        <li><a href="/world" routerLinkActive="active">World Bank</a></li>
      </ul>
    </div>
  </nav>

<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-user"></span> Add Local Account</h1>
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/connect/local" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Add Local</button>
    </form>
    <hr>
    <p><a href="/profile">Go back to profile</a></p>
</div>
</div>
</body>
</html>
